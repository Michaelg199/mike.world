#include <iostream>

// creator: Michael gbemibade
int main()
{
    int x = 0; // 1st integer
    int y = 0; // 2nd integer
    int sum = 0; // answer integer
    std::cout << "Hello World\n"; // Hello World greeting
    std::cout << "please enter a number:"; // x integer
    std::cin >> x;
    std::cout << "please enter another number:"; // y integer
    std::cin >> y;
    sum = x - y; //substraction
    // results
    std::cout << "\nThe sum of the two numbers is: " << sum <<"\n";
    return 0;
}
