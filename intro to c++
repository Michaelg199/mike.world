#include <iostream>

int main()
{
    int User_Entered_value1 =0;
    int User_Entered_value2 = 0;
    int sum =0;
    std::cout << "Hello World\n";
    std::cout << "please enter a number:";
    std::cin >> User_Entered_value1;
    std::cout << "please enter another number:";
    std::cin >> User_Entered_value2;
    sum = User_Entered_value1 + User_Entered_value2;
    std::cout << "\nThe sum of the two numbers is: " << sum <<"\n";
    return 0;
}
